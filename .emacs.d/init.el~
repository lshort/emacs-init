(setq los-emacs-init-file load-file-name)
(setq los-emacs-config-dir
      (file-name-directory los-emacs-init-file))
(setq los-emacs-init-dir
      (list (cons "." (expand-file-name "init.d" user-emacs-directory))))
;      (expand-file-name "init.d" user-emacs-directory))

(if (file-exists-p los-emacs-init-dir)
    (dolist (file (directory-files los-emacs-init-dir t "\\.el$"))
      (load file)))

;; Set up 'custom' system
(setq custom-file (expand-file-name "emacs-customizations.el" los-emacs-config-dir))
;(setq custom-file "~/.emacs.d/emacs-customizations.el")
(load custom-file)

(add-hook 'los-code-modes-hook
          (lambda () (linum-mode 1)))

(add-hook 'haskell-mode-hook
          (lambda () (run-hooks 'los-code-modes-hook)))

