#include <string>
#include <ostream>
#include <iostream>

using namespace std;

template <int N>
class Sum {
public:
  enum { val = N + Sum<N-1>::val };
};

template<>
class Sum<0> {
public:
  enum { val = 0 };
};

bool delete_char (string& in, const char test_char)
{
  int found = 0;
  int i;
  for (i=0; i<in.length(); i++)  
    if (in[i] == test_char) {
      found++;
      int x = 0;	
    } else {
      in[i-found] = in[i];
    }

  in.resize(i-found);
  return (found != 0);
}


int main ( int argc, char* argv[] )
{
  cout << Sum<4>::val << endl;
  if (argc < 3) {
    cout << "Usage: dc <string> <test_char>";
  } else {
    string input = string(argv[1]);
    cout << "Base string: " << input << endl;
    delete_char( input, argv[2][0] );
    cout << "Modified string: " << input << endl;
  }
}
